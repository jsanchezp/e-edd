            name="Graphviz View">
      </view>
      <view
            category="es.ucm.fdi.edd.ui.category"
            class="es.ucm.fdi.edd.ui.views.EDDViewer"
            icon="icons/sample.gif"
            id="es.ucm.fdi.edd.ui.views.EDDViewer"
            name="EDD Viewer"
            restorable="true">
      </view>
      <view
            category="es.ucm.fdi.edd.ui.category"
            class="es.ucm.fdi.edd.ui.views.EDDSequenceDiagramsView"
            icon="icons/sample.gif"
            id="es.ucm.fdi.edd.ui.views.EDDSequenceDiagramsView"
            name="EDD Sequence Diagrams View">
      </view>
      <view
            class="es.ucm.fdi.edd.ui.views.EDDebugView"
            icon="icons/releng_gears.gif"
            id="es.ucm.fdi.edd.ui.views.EDDebugView"
            name="Erlang Declarative Debugger"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchShortcuts">
      <shortcut
            class="es.ucm.fdi.edd.ui.launch.EDDLaunchShortcut"
            icon="icons/sample.gif"
            id="es.ucm.fdi.edd.ui.launch.EDDLaunchShortcut"
            label="Erlang Declarative Debugger"
            modes="run,debug">
         <contextualLaunch>
            <enablement>
               <with
                     variable="selection">
                  <iterate>
                     <adapt
                           type="org.erlide.engine.model.root.IErlElement">
                     </adapt>
                  </iterate>
               </with>
            </enablement>
         </contextualLaunch>
         <configurationType
               id="org.erlide.backend.erlangProcess">
         </configurationType>
         <description
               description="Load this project in an Erlang node, starting it if needed."
               mode="run">
         </description>
         <description
               description="Load and debug this project in an Erlang node, starting it if needed."
               mode="debug">
         </description>
      </shortcut>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.debug.ui.DebugPerspective">
         <view
               id="es.ucm.fdi.edd.ui.views.GraphvizView"
               minimized="false"
               ratio="0.5"
               relationship="stack"
               relative="es.ucm.fdi.edd.graphiti.views.EDDView">
         </view>
         <view
               id="es.ucm.fdi.edd.ui.views.EDDViewer"
               minimized="false"
               ratio="0.5"
               relationship="stack"
               relative="es.ucm.fdi.edd.ui.views.GraphvizView">
         </view>
         <view
               id="es.ucm.fdi.edd.ui.views.EDDSequenceDiagramsView"
               minimized="false"
               ratio="0.5"
               relationship="stack"
               relative="es.ucm.fdi.edd.ui.views.EDDViewer">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
